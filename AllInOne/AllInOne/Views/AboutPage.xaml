<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllInOne.Views.AboutPage"
             xmlns:vm="clr-namespace:AllInOne.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <Label Text="Date of Birth"/>
        <DatePicker />
        <Entry x:Name="Email" Text="{Binding Email, Mode=TwoWay}" Placeholder="{Binding Email, Mode=TwoWay}"   
                           PlaceholderColor="#ef5350" HeightRequest="50"   
                           Keyboard="Email"  
                           TextColor="#ef5350"/>
        <Entry x:Name="Password" Text="{Binding Password, Mode=TwoWay}" Placeholder="{Binding Password, Mode=TwoWay}"  
                           PlaceholderColor="#ef5350" HeightRequest="50"   
                           IsPassword="True"  
                           TextColor="#ef5350"/>

        <Button Text="Update" HorizontalOptions="CenterAndExpand" VerticalOptions="End"/>
     </StackLayout>

</ContentPage>
